<h1>Welcome to the Signup Page!</h1>
<%= form_for @user do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.text_field :password %>
<%= f.submit %>
<% end %>


<% if @user.errors.any? %>
<div id = "error_explanation">
<ul>
<% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
</div>
<% end %>